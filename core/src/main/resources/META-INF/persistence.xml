<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="JPA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/SoaMySqlDS</jta-data-source>
        <class>pl.edu.agh.dao.AddressDao</class>
        <class>pl.edu.agh.dao.CategoryDao</class>
        <class>pl.edu.agh.dao.CourseDao</class>
        <class>pl.edu.agh.dao.OrderDao</class>
        <class>pl.edu.agh.dao.ScheduleDao</class>
        <class>pl.edu.agh.dao.UserDao</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->
        </properties>
    </persistence-unit>
</persistence>